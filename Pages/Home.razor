        MelhorCanilChowChow.NomePetShop = petShopChochow.NomePetShop;
        MelhorCanilChowChow.Distancia = petShopChochow.Distancia;


        if (DataEscolhida.DayOfWeek == DayOfWeek.Saturday
                                    ||
            DataEscolhida.DayOfWeek == DayOfWeek.Sunday)
